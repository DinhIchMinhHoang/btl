<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.SearchController">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <HBox fx:id="headBar" alignment="TOP_RIGHT" prefHeight="28.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
               <children>
                  <JFXButton fx:id="MinimizeButton" alignment="CENTER" buttonType="RAISED" contentDisplay="CENTER" onAction="#onMinimizeButtonClick" prefHeight="36.0" prefWidth="50.0" style="-fx-background-radius: 0;" styleClass="selected" stylesheets="@../../../button.css" text=" ">
                     <font>
                        <Font size="0.001" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../img/minimize.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="CloseButton" alignment="BOTTOM_CENTER" buttonType="RAISED" contentDisplay="BOTTOM" onAction="#onCloseButtonClick" prefHeight="44.0" prefWidth="50.0" ripplerFill="#9c0311" style="-fx-background-radius: 0;" styleClass="close" stylesheets="@../../../button.css" text=" ">
                     <font>
                        <Font size="0.001" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="38.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../img/close.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </JFXButton>
               </children>
               <stylesheets>
                  <URL value="@../../../backGround.css" />
                  <URL value="@../../../homeView.css" />
               </stylesheets>
               <styleClass>
                  <String fx:value="mixcolor" />
                  <String fx:value="bottom-radius" />
               </styleClass>
            </HBox>
         </top>
         <left>
            <VBox alignment="CENTER" prefHeight="600.0" prefWidth="250.0" spacing="20.0" style="-fx-background-radius: 20;" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fitHeight="180.0" fitWidth="201.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../img/book.png" />
                     </image>
                  </ImageView>
                  <JFXButton fx:id="HomeButton" buttonType="RAISED" graphicTextGap="20.0" layoutX="10.0" layoutY="210.0" onAction="#onHomeButtonClick" prefHeight="40.0" prefWidth="200.0" ripplerFill="#fd0000" style="-fx-background-radius: 20; -fx-border-radius: 20;" styleClass="selected1" stylesheets="@../../../button.css" text="Home">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="27.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../img/home.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="SearchButton" buttonType="RAISED" graphicTextGap="20.0" onAction="#onSearchButtonClick" prefHeight="40.0" prefWidth="200.0" ripplerFill="#a000fd" style="-fx-background-radius: 20; -fx-border-radius: 20;" stylesheets="@../../../button.css" text="Search">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="27.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../img/search.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <styleClass>
                        <String fx:value="selected3" />
                        <String fx:value="selected3-border" />
                     </styleClass>
                  </JFXButton>
                  <JFXButton fx:id="TranslaterButton" buttonType="RAISED" graphicTextGap="20.0" layoutX="10.0" layoutY="250.0" onAction="#onTranslaterButtonClick" prefHeight="40.0" prefWidth="200.0" ripplerFill="#0013fd" style="-fx-background-radius: 20; -fx-border-radius: 20;" styleClass="selected0" stylesheets="@../../../button.css" text="Translate">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="27.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../img/translate.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="GameButton" buttonType="RAISED" graphicTextGap="20.0" layoutX="10.0" layoutY="330.0" onAction="#onGameButtonClick" prefHeight="40.0" prefWidth="200.0" ripplerFill="#08fd00" style="-fx-background-radius: 20; -fx-border-radius: 20;" styleClass="selected2" stylesheets="@../../../button.css" text="Game">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="27.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../img/game.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </JFXButton>
               </children>
               <styleClass>
                  <String fx:value="white-background" />
                  <String fx:value="right-side-border" />
               </styleClass>
               <stylesheets>
                  <URL value="@../../../backGround.css" />
                  <URL value="@../../../homeView.css" />
               </stylesheets>
            </VBox>
         </left>
         <center>
            <VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20;">
               <HBox alignment="CENTER" spacing="10">
                  <TextField fx:id="textField" prefHeight="40" prefWidth="300" promptText="Enter word to search...">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextField>
                  <JFXButton buttonType="RAISED" onAction="#searchEvent" styleClass="selected" stylesheets="@../../../button.css" text="Search">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </JFXButton>
                  <JFXButton buttonType="RAISED" onAction="#speechEvent" styleClass="selected" stylesheets="@../../../button.css" text="Speak">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </JFXButton>
               </HBox>

               <HBox alignment="CENTER" spacing="10">
                  <JFXButton buttonType="RAISED" onAction="#addEvent" styleClass="selected" stylesheets="@../../../button.css" text="Add Word">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </JFXButton>
                  <JFXButton buttonType="RAISED" onAction="#deleteEvent" styleClass="selected" stylesheets="@../../../button.css" text="Delete Word">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </JFXButton>
                  <JFXButton buttonType="RAISED" onAction="#changeEvent" styleClass="selected" stylesheets="@../../../button.css" text="Edit Word">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </JFXButton>
                  <JFXButton buttonType="RAISED" onAction="#saveEvent" styleClass="selected" stylesheets="@../../../button.css" text="Save Changes">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </JFXButton>
               </HBox>

               <HBox spacing="10" VBox.vgrow="ALWAYS">
                  <ListView fx:id="listView" onMouseClicked="#clickEvent" prefWidth="300" />
                  <TextArea fx:id="textArea" wrapText="true" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextArea>
               </HBox>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
